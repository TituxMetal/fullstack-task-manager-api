{
  "author": "Titux Metal <github@lgdweb.fr>",
  "description": "The api for the fullstack task manager. Build with Express, Mongoose and Joi",
  "name": "fullstack-task-manager-api",
  "license": "MIT",
  "main": "./src/index.js",
  "version": "1.0.0",
  "scripts": {
    "docker:down": "docker-compose down",
    "docker:stop": "docker-compose stop",
    "docker:up": "mkdir -p .docker/data/{db,log} && docker-compose up -d",
    "posttest": "yarn docker:down",
    "prewatch": "yarn docker:up db cache",
    "start": "node ./src/index.js",
    "test": "env-cmd -f ./test.env jest --runInBand",
    "test:coverage": "env-cmd -f ./test.env jest --coverage tests/*test.js",
    "watch": "env-cmd nodemon ./src/index.js"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.9.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-watch": "^7.0.0",
    "env-cmd": "^10.1.0",
    "eslint-config-standard-airbnb-bundle": "^1.0.6",
    "eslint-import-resolver-alias": "^1.1.2",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./tests/report",
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TituxMetal/fullstack-task-manager-api"
  }
}
